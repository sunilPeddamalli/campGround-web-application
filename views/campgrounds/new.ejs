<%- include ("../partials/header")  %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">
			Create new campground
		</h1>
		<div style="width:30%; margin:30px auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" placeholder="Campground name" name="name">
				</div>
				<div class="form-group">
					<input type="number" class="form-control" placeholder="price" name="price" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" placeholder="Campground image" name="image">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" placeholder="Description" name="description">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>	
				</div>
			</form>	
			<a href="/campgrounds">Go Back</a>
		</div>	
	</div>	
</div>



<%- include ("../partials/footer")  %>